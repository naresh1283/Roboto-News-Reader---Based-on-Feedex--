<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/CustomActionBarTheme.MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBarTheme.MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/bar8</item>
        <item name="titleTextStyle">@style/CustomActionBarTheme.MyActionBar.TitleTextStyle</item>
    </style>

    <style name="CustomActionBarTheme.MyActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
    </style>

</resources>