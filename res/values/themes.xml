<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBarTheme.MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBarTheme.MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/bar8</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTheme.MyActionBar.TitleTextStyle</item>
    </style>

    <style name="CustomActionBarTheme.MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
    </style>

</resources>